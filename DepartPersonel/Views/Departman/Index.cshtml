@using DepartPersonel.Models
@model List<Departman>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAna.cshtml";
}
<a class="btn btn-success" href="/Departman/Yeni">Yeni Departman</a>
<h2>Departman Listesi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>AD</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        { var current = Model[i];
        <tr>
            <th>@(i + 1)</th>
            <td>@current.Id</td>
            <td>@current.Ad</td>
            <td><a class="btn btn-primary" href="/Departman/Guncelle/@current.Id">Güncelle</a></td>
            <td><a class="btn btn-warning" href="/Departman/Sil/@current.Id">Sil</a></td>
        </tr>
        }
    </tbody>
</table>
