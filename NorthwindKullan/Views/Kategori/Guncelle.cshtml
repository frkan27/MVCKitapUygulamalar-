@model NorthwindKullan.Models.EntityModel.Category
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutAna.cshtml";
}

<div class="container">
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("GUncelle", "Kategori", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.CategoryID)
                <div class="form-group">
                    <label for="CategoryName">Kategori adı</label>
                    @Html.TextBoxFor(x =>x.CategoryName, new { @class = "form-control", placeholder = "Kategori adı" })
                </div>
                <div class="form-group">
                    <label for="Description">Açıklama</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", placeholder = "Açıklama" })
                </div>
                <button type="submit" class="btn btn-warning">Güncelle</button>
                
            }
        </div>
    </div>
</div>

